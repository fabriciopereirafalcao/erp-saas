name: ðŸ”’ Security Scan

on:
  push:
    branches:
      - main
      - develop
  pull_request:
    branches:
      - main
      - develop
  schedule:
    # Executar toda segunda-feira Ã s 9h
    - cron: '0 9 * * 1'
  workflow_dispatch:

env:
  NODE_VERSION: '18'

jobs:
  # ==========================================
  # DEPENDENCY AUDIT
  # ==========================================
  dependency-audit:
    name: ðŸ” Dependency Audit
    runs-on: ubuntu-latest
    
    steps:
      - name: ðŸ“¥ Checkout code
        uses: actions/checkout@v4

      - name: ðŸ“¦ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}

      - name: ðŸ” Run npm audit
        run: |
          echo "## ðŸ” NPM Audit Report" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo '```' >> $GITHUB_STEP_SUMMARY
          npm audit --production || true >> $GITHUB_STEP_SUMMARY
          echo '```' >> $GITHUB_STEP_SUMMARY

      - name: ðŸ“Š Check for vulnerabilities
        run: |
          npm audit --audit-level=moderate --production
        continue-on-error: true

  # ==========================================
  # SECRET SCANNING
  # ==========================================
  secret-scan:
    name: ðŸ” Secret Scanning
    runs-on: ubuntu-latest
    
    steps:
      - name: ðŸ“¥ Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: ðŸ” TruffleHog Secret Scan
        uses: trufflesecurity/trufflehog@main
        with:
          path: ./
          base: ${{ github.event.repository.default_branch }}
          head: HEAD
        continue-on-error: true

  # ==========================================
  # DEPENDENCY REVIEW (PRs only)
  # ==========================================
  dependency-review:
    name: ðŸ“¦ Dependency Review
    runs-on: ubuntu-latest
    if: github.event_name == 'pull_request'
    
    steps:
      - name: ðŸ“¥ Checkout code
        uses: actions/checkout@v4

      - name: ðŸ“¦ Dependency Review
        uses: actions/dependency-review-action@v4
        with:
          fail-on-severity: moderate

  # ==========================================
  # CODE QUALITY SCAN
  # ==========================================
  code-quality:
    name: ðŸ“Š Code Quality Scan
    runs-on: ubuntu-latest
    
    steps:
      - name: ðŸ“¥ Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: ðŸ“¦ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}

      - name: ðŸ“š Install dependencies
        run: npm ci

      - name: ðŸ” Check for common issues
        run: |
          echo "Scanning for common security issues..."
          
          # Verificar se hÃ¡ console.logs em produÃ§Ã£o
          if grep -r "console.log" src/ --exclude-dir=node_modules; then
            echo "âš ï¸ Warning: console.log found in source code"
          fi
          
          # Verificar se hÃ¡ TODOs crÃ­ticos
          if grep -r "TODO.*CRITICAL" src/ --exclude-dir=node_modules; then
            echo "âš ï¸ Warning: Critical TODOs found"
          fi
          
          # Verificar arquivos .env no repositÃ³rio
          if find . -name ".env*" -not -name ".env.example" | grep -q .; then
            echo "âŒ ERROR: .env files should not be committed!"
            exit 1
          fi
          
          echo "âœ… Basic security checks passed"

  # ==========================================
  # SUMMARY
  # ==========================================
  security-summary:
    name: ðŸ“Š Security Summary
    runs-on: ubuntu-latest
    needs: [dependency-audit, secret-scan, code-quality]
    if: always()
    
    steps:
      - name: ðŸ“Š Create Summary
        run: |
          echo "## ðŸ”’ Security Scan Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "### Scans Executed:" >> $GITHUB_STEP_SUMMARY
          echo "- âœ“ Dependency Audit" >> $GITHUB_STEP_SUMMARY
          echo "- âœ“ Secret Scanning" >> $GITHUB_STEP_SUMMARY
          echo "- âœ“ Code Quality Check" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "**Status:** ${{ job.status }}" >> $GITHUB_STEP_SUMMARY
          echo "**Date:** $(date)" >> $GITHUB_STEP_SUMMARY

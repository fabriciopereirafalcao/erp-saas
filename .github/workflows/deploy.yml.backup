name: ðŸš€ Deploy Pipeline

on:
  push:
    branches:
      - develop    # Deploy automÃ¡tico para STAGING
      - main       # Deploy automÃ¡tico para PRODUCTION
  pull_request:
    branches:
      - develop
      - main

env:
  NODE_VERSION: '18'

jobs:
  # ==========================================
  # JOB 1: LINT E VALIDAÃ‡ÃƒO
  # ==========================================
  lint:
    name: ðŸ” Lint & Type Check
    runs-on: ubuntu-latest
    
    steps:
      - name: ðŸ“¥ Checkout code
        uses: actions/checkout@v4

      - name: ðŸ“¦ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'

      - name: ðŸ“š Install dependencies
        run: npm ci --legacy-peer-deps

      - name: ðŸŽ¨ Run ESLint
        run: npm run lint --if-present
        continue-on-error: true

      - name: ðŸ“ TypeScript Check
        run: npx tsc --noEmit
        continue-on-error: true

  # ==========================================
  # JOB 2: TESTES
  # ==========================================
  test:
    name: ðŸ§ª Run Tests
    runs-on: ubuntu-latest
    needs: lint
    
    steps:
      - name: ðŸ“¥ Checkout code
        uses: actions/checkout@v4

      - name: ðŸ“¦ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'

      - name: ðŸ“š Install dependencies
        run: npm ci --legacy-peer-deps

      - name: ðŸ§ª Run tests
        run: npm test --if-present
        continue-on-error: true

  # ==========================================
  # JOB 3: BUILD TEST
  # ==========================================
  build-test:
    name: ðŸ—ï¸ Test Build
    runs-on: ubuntu-latest
    needs: [lint, test]
    
    steps:
      - name: ðŸ“¥ Checkout code
        uses: actions/checkout@v4

      - name: ðŸ“¦ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'

      - name: ðŸ“š Install dependencies
        run: npm ci --legacy-peer-deps

      - name: ðŸ—ï¸ Build application
        run: npm run build
        env:
          VITE_ENVIRONMENT: test

      - name: ðŸ“Š Check build size
        run: |
          echo "ðŸ“¦ Build size analysis:"
          du -sh dist/
          du -sh dist/assets/

  # ==========================================
  # JOB 4: DEPLOY STAGING
  # ==========================================
  deploy-staging:
    name: ðŸš€ Deploy to STAGING
    runs-on: ubuntu-latest
    needs: [build-test]
    if: github.ref == 'refs/heads/develop' && github.event_name == 'push'
    environment:
      name: staging
      url: https://staging.seudominio.com
    
    steps:
      - name: ðŸ“¥ Checkout code
        uses: actions/checkout@v4

      - name: ðŸ“¦ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'

      - name: ðŸ“š Install dependencies
        run: npm ci --legacy-peer-deps

      - name: ðŸ—ï¸ Build for Staging
        run: npm run build
        env:
          VITE_SUPABASE_URL: ${{ secrets.STAGING_SUPABASE_URL }}
          VITE_SUPABASE_ANON_KEY: ${{ secrets.STAGING_SUPABASE_ANON_KEY }}
          VITE_API_URL: ${{ secrets.STAGING_API_URL }}
          VITE_APP_URL: ${{ secrets.STAGING_APP_URL }}
          VITE_ENABLE_DEBUG: 'true'
          VITE_ENVIRONMENT: 'staging'
          NODE_ENV: 'production'

      - name: ðŸš€ Deploy to Vercel (Staging)
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
          working-directory: ./
          scope: ${{ secrets.VERCEL_ORG_ID }}

      - name: ðŸ“¦ Deploy Supabase Functions (Staging)
        run: |
          echo "Deploying Edge Functions to Staging..."
          npx supabase functions deploy --project-ref ${{ secrets.STAGING_PROJECT_REF }} --no-verify-jwt
        env:
          SUPABASE_ACCESS_TOKEN: ${{ secrets.SUPABASE_ACCESS_TOKEN }}
        continue-on-error: true

      - name: ðŸ’¬ Notify Success
        if: success()
        run: |
          echo "âœ… Deploy para STAGING realizado com sucesso!"
          echo "ðŸ”— URL: https://staging.seudominio.com"

      - name: âŒ Notify Failure
        if: failure()
        run: |
          echo "âŒ Falha no deploy para STAGING"

  # ==========================================
  # JOB 5: DEPLOY PRODUCTION
  # ==========================================
  deploy-production:
    name: ðŸš€ Deploy to PRODUCTION
    runs-on: ubuntu-latest
    needs: [build-test]
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'
    environment:
      name: production
      url: https://app.seudominio.com
    
    steps:
      - name: ðŸ“¥ Checkout code
        uses: actions/checkout@v4

      - name: ðŸ“¦ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'

      - name: ðŸ“š Install dependencies
        run: npm ci --legacy-peer-deps

      - name: ðŸ—ï¸ Build for Production
        run: npm run build
        env:
          VITE_SUPABASE_URL: ${{ secrets.PROD_SUPABASE_URL }}
          VITE_SUPABASE_ANON_KEY: ${{ secrets.PROD_SUPABASE_ANON_KEY }}
          VITE_API_URL: ${{ secrets.PROD_API_URL }}
          VITE_APP_URL: ${{ secrets.PROD_APP_URL }}
          VITE_SENTRY_DSN: ${{ secrets.SENTRY_DSN }}
          VITE_ENABLE_DEBUG: 'false'
          VITE_ENVIRONMENT: 'production'
          NODE_ENV: 'production'

      - name: ðŸš€ Deploy to Vercel (Production)
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
          vercel-args: '--prod'
          working-directory: ./
          scope: ${{ secrets.VERCEL_ORG_ID }}

      - name: ðŸ“¦ Deploy Supabase Functions (Production)
        run: |
          echo "Deploying Edge Functions to Production..."
          npx supabase functions deploy --project-ref ${{ secrets.PROD_PROJECT_REF }} --no-verify-jwt
        env:
          SUPABASE_ACCESS_TOKEN: ${{ secrets.SUPABASE_ACCESS_TOKEN }}
        continue-on-error: true

      - name: ðŸ“Š Create Release Tag
        if: success()
        run: |
          git config user.name "GitHub Actions"
          git config user.email "actions@github.com"
          VERSION=$(date +%Y.%m.%d-%H%M)
          git tag -a "v$VERSION" -m "Release v$VERSION"
          git push origin "v$VERSION" || true

      - name: ðŸ’¬ Notify Success
        if: success()
        run: |
          echo "âœ… Deploy para PRODUÃ‡ÃƒO realizado com sucesso!"
          echo "ðŸ”— URL: https://app.seudominio.com"
          echo "ðŸ“ˆ Monitorar: https://vercel.com/dashboard"

      - name: âŒ Notify Failure
        if: failure()
        run: |
          echo "âŒ Falha no deploy para PRODUÃ‡ÃƒO"
          echo "ðŸ” Verificar logs acima para detalhes"

  # ==========================================
  # JOB 6: NOTIFICATION (opcional)
  # ==========================================
  notify:
    name: ðŸ“¢ Send Notifications
    runs-on: ubuntu-latest
    needs: [deploy-staging, deploy-production]
    if: always()
    
    steps:
      - name: ðŸ“Š Summary
        run: |
          echo "## ðŸ“Š Deploy Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "- **Branch:** ${{ github.ref_name }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Commit:** ${{ github.sha }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Author:** ${{ github.actor }}" >> $GITHUB_STEP_SUMMARY
          echo "- **Status:** ${{ job.status }}" >> $GITHUB_STEP_SUMMARY
